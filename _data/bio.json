<div style="margin-top: 10px;" class="ui stackable grid container">

  <div class="sixteen wide column no-bottom">
    <h2 class="ui center aligned header no-bottom">{{ site.data.bio.basics.name }}</h2>
  </div>

  <div class="eight wide left aligned column">
    {% include bio-network-links.html %}
  </div>

  <div class="eight wide right aligned column">
    {% include bio-address.html %}
  </div>
</div>

<div style="margin-bottom: 20px" class="ui stackable grid container">

  <!-- Education + Work -->
  {% include bio-education-1.html %}
  {% include bio-work-1.html %}

  <!-- Key Projects and Achievements -->
  {% if site.data.bio.projects and site.data.bio.projects.size > 0 %}
  <div class="sixteen wide column">
    <h3 class="ui header">Key Projects and Achievements</h3>

    {% for p in site.data.bio.projects %}
      <div style="margin-bottom: 1.6em;">

        <div style="display:flex; justify-content:space-between; flex-wrap:wrap; gap:12px;">
          <strong>{{ p.title }}</strong>
          {% if p.dates %}
            <span style="color: rgba(0,0,0,0.6); white-space: nowrap;">{{ p.dates }}</span>
          {% endif %}
        </div>

        {% if p.bullets and p.bullets.size > 0 %}
        <ul style="margin-top: 0.4em;">
          {% for b in p.bullets %}
            <li>{{ b }}</li>
          {% endfor %}
        </ul>
        {% endif %}

      </div>
    {% endfor %}
  </div>
  {% endif %}

  <!-- Skills -->
  {% include bio-skills-1.html %}

  <!-- Achievements -->
  {% if site.data.bio.achievements and site.data.bio.achievements.size > 0 %}
  <div class="sixteen wide column">
    <h3 class="ui header">Achievements</h3>
    <ul style="margin-top: 0.4em;">
      {% for a in site.data.bio.achievements %}
        <li>{{ a }}</li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}

</div>
